escolha = input ("digite aqui o número de sua escolha para comer")

if escolha == "1":
  print ("boa escolha, é o de sempre né")
elif escolha == "2":
   print ("2 ótima escolha, é crocante saboroso")
elif escolha == "3":
   print ("ótima escolha, um clássico")
elif escolha =="4":
   print ("magnífica escolha, saboroso demais")
elif escolha == "5":
   print ("muito boa escolha, é bom algo difeente")
elif escolha == "6":
   print ("excelente escolha, essa não tem erro")
elif escolha == "7":
   print ("maravilha de escolha, esse trem é bom hein")

